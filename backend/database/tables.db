CREATE TABLE scholarship_finder.categories (
  id SERIAL PRIMARY KEY,
  name VARCHAR(255) NOT NULL
);

CREATE TABLE scholarship_finder.scholarships (
  id SERIAL PRIMARY KEY,
  title VARCHAR(255) NOT NULL,
  description TEXT,
  deadline_date DATE NOT NULL,
  link VARCHAR(255) NOT NULL,
  image VARCHAR
);

CREATE TABLE scholarship_finder.scholarship_category (
  id SERIAL PRIMARY KEY,
  scholarship_id INTEGER NOT NULL REFERENCES scholarship_finder.scholarships(id) ON UPDATE CASCADE,
  category_id INTEGER NOT NULL REFERENCES scholarship_finder.categories(id) ON UPDATE CASCADE
);

CREATE TABLE scholarship_finder.users (
  id SERIAL PRIMARY KEY,
  name VARCHAR(255) NOT NULL,
  email VARCHAR(255) NOT NULL,
  password VARCHAR(255) NOT NULL,
  isverified BOOLEAN NOT NULL DEFAULT false
);

CREATE TABLE scholarship_finder.wish_list (
  id SERIAL PRIMARY KEY,
  user_id INTEGER NOT NULL REFERENCES scholarship_finder.users(id) ON UPDATE CASCADE
);

CREATE TABLE scholarship_finder.wish_list_item (
  id SERIAL PRIMARY KEY,
  wish_list_id INTEGER NOT NULL REFERENCES scholarship_finder.wish_list(id) ON UPDATE CASCADE,
  scholarship_id INTEGER NOT NULL REFERENCES scholarship_finder.scholarships(id) ON UPDATE CASCADE
);
